<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayoutActivityMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aller.drapeauapp.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/imageViewSphere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/ConstraintLayoutActivityMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageViewSphere"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp">

        <LinearLayout
            android:id="@+id/linearlayoutActivityMain"
            android:layout_width="0dp"
            android:layout_height="340dp"
            android:orientation="vertical"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/buttonCommencerMainActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Commencer" />

            <Button
                android:id="@+id/buttonQuitterMainActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quitter" />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

</RelativeLayout>

