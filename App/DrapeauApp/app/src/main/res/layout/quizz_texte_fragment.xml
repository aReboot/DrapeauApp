<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayoutQuizzTexteFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewQuizzTexteFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayoutQuizzTexteFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageViewQuizzTexteFragment"
        android:layout_marginTop="24dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="140dp">

        <LinearLayout
            android:id="@+id/linearLayoutQuizzTexteFragment"
            android:layout_width="371dp"
            android:layout_height="222dp"
            android:layout_marginBottom="115dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:weightSum="1"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayoutQuizzTexteFragmentDeux"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1">

            <Button
                android:id="@+id/buttonQuizzTexteUn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/buttonQuizzTexteDeux"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/buttonQuizzTexteTrois"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/buttonQuizzTexteQuatre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />

            <ProgressBar
                android:id="@+id/progressBarQuizzTexte"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:max="10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutQuizzTexteFragmentDeux"
            android:layout_width="366dp"
            android:layout_height="160dp"
            android:layout_marginEnd="13dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="250dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1"
            tools:layout_editor_absoluteY="290dp"></LinearLayout>
    </android.support.constraint.ConstraintLayout>

</RelativeLayout>