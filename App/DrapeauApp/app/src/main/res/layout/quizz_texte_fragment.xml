<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayoutQuizzTexteFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewQuizzTexteFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_toStartOf="@+id/imageViewQuizzTexteFragment"
        android:text="question "
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:layout_marginTop="10dp" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayoutQuizzTexteFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageViewQuizzTexteFragment"
        android:layout_marginTop="24dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="140dp">

        <LinearLayout
            android:id="@+id/linearLayoutQuizzTexteFragment"
            android:layout_width="0dp"
            android:layout_height="236dp"
            android:layout_marginBottom="115dp"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:weightSum="1"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayoutQuizzTexteFragmentDeux"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.405"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="175dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/buttonQuizzTexteUn"
                        style="@style/MyBtnStyle"
                        android:layout_width="160dp"
                        android:layout_height="95dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/windowsBackground"
                        android:textSize="20sp"
                        tools:text="testpolice" />

                    <Button
                        android:id="@+id/buttonQuizzTexteTrois"
                        style="@style/MyBtnStyle"
                        android:layout_width="160dp"
                        android:layout_height="95dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.13"
                        android:textSize="20sp"
                        tools:text="bla" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/buttonQuizzTexteDeux"
                        style="@style/MyBtnStyle"
                        android:layout_width="160dp"
                        android:layout_height="95dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="20sp"
                        tools:text="azerty" />

                    <Button
                        android:id="@+id/buttonQuizzTexteQuatre"
                        style="@style/MyBtnStyle"
                        android:layout_width="160dp"
                        android:layout_height="95dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.22"
                        android:textSize="20sp"
                        tools:text="lu" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutQuizzTexteFragmentDeux"
            android:layout_width="0dp"
            android:layout_height="153dp"
            android:layout_marginEnd="61dp"
            android:layout_marginStart="61dp"
            android:layout_marginTop="309dp"
            android:orientation="horizontal"
            android:weightSum="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1">

            <ProgressBar
                android:id="@+id/progressBarQuizzTexte"
                style="@style/CustomProgressBarHorizontal"
                android:layout_width="240dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:max="10"
                android:layout_weight="2.70" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="10"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

</RelativeLayout>